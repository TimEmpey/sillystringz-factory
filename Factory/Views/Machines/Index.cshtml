@{
  Layout = "_Layout";
}

@using Factory.Models;

<div class="form">

  <h2>Machines</h2>

  @if (@Model.Count == 0)
  {
    <h3>No machines have been added yet!</h3>
  } 

  <ul>
    @foreach(Machine machine in Model)
    {
      <p>@Html.ActionLink($"{machine.Name}", "Details", new { id = machine.MachineId })</p>
    }
  </ul>
</div>