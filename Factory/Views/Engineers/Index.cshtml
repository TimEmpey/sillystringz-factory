@{
  Layout = "_Layout";
}

@using Factory.Models;

<div class="form">
  <h2>Engineers</h2>

  @if (@Model.Count == 0)
  {
    <h3>No engineers have been added yet!</h3>
  } 

  <ul>
    @foreach(Engineer engineer in Model)
    {
      <p>@Html.ActionLink($"{engineer.Name}", "Details", new { id = engineer.EngineerId })</p>
    }
  </ul>
</div>