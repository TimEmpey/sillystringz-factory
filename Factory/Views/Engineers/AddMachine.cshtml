@{
  Layout = "_Layout";
}

@model UniversityRegistrar.Models.Engineer

<h2>Add a Machine</h2>

<h4>Select Licesned Machine: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.EngineerId);

  @Html.Label("Select machine");
  @Html.DropDownList("MachineId");

  <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to Engineers", "Index")</p>